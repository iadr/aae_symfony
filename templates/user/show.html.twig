{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Institution</th>
                <td>{{ user.studyIn }}</td>
            </tr>
            <tr>
                <th>Address</th>
{#                <td>{{ user.address? user.address| slice(1,5): 'Not defined!' }}</td>#}
                <td>{{ ' You shouldn\'t be looking for this info!!' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
{#                <td>{{ user.address? user.address| slice(1,5): 'Not defined!' }}</td>#}
                <td>{{ user.enabled ? "Enabled" : "Disabled" }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

{#    {{ include('user/_delete_form.html.twig') }}#}
{% endblock %}
